# General
APP_ENV=dev

# API
API_HOST=0.0.0.0
API_PORT=8000

# UI
UI_HOST=0.0.0.0
UI_PORT=7860

# Memory storage
MEMORY_PATH=/app/data/memory.jsonl

# Ollama (optional in first cut)
OLLAMA_HOST=ollama
OLLAMA_PORT=11434

# Models and runtime (optional; safe defaults)
# Embedding model: MiniLM (EN), BGE-small (ZH), or M3 (multi)
EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2
# ASR model (future): faster-whisper small/base
ASR_MODEL=faster-whisper-small
# Vector store: jsonl (PoC) | chroma | weaviate
VECTOR_STORE=jsonl
# Device: cpu | cuda (if available)
DEVICE=cpu
# Default Top-K for queries
TOP_K=5
